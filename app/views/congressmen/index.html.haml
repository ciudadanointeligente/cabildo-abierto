%div.row
  %div.col-md-7
    %ol.breadcrumb
      %li
        = link_to "Portada", root_path
      %li.active
        = link_to "Congresistas", congressmen_path
  %div.col-md-5
    %ul.list-inline
      %li
        %a{'href'=>'#'}
          %i.fa.fa-facebook
          Comparte
      %li
        %a{'href'=>'#'}
          %i.fa.fa-twitter
          Twittea

%div
  %h4
    Congresistas

%div.row
  %div.col-md-3
    = render :partial => "filter_search_form"
  %div.col-md-9
    - @congressmen.persons.each do | congressman |

      %div.row
        %div.col-md-1
          - if congressman.images.nil?
            %img.img-circle.img-responsive{:src=>congressman.images[0]['url']}
          - else
            %img.img-circle.img-responsive{:src=>'http://placehold.it/200x200'}
        %div.col-md-11
          = link_to congressman.name, congressman_path(congressman.slug)
          %p
            %strong
              Lugar que representa:
            = congressman.represent[0].district
