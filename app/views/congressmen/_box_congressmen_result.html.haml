- @congressmen.persons.each do |congressman|
  %div.row
    %div.col-md-1
      - if !congressman.images[0].nil?
        %img.img-circle.img-responsive{:src=>congressman.images[0]['url']}
      - else
        %img.img-circle.img-responsive{'src'=>'http://www.placehold.it/200x200'}
    %div.col-md-11
      %div.row
        %div.col-md-9
          %h4
            = link_to congressman.name, congressman_path(congressman.slug)
        %div.col-md-3
          %a{'href'=>'#'}
            %i.fa.fa-pencil
            99999
      %p
        %strong
          Partido:
        El Partido
        %strong
          Lugar que representa:
        Regi√≥n patito

- if @congressmen.persons.count == 0
  %p.text-center
    = t('search.there_are_no_results')