%style

%div.jumbotron{:style => "font-size: 14px;"}
  = form_tag('/advanced_search', :method => 'get', :class => "form-inline") do
    %div.row
      %div.col-xs-10
        %input.form-control{:type => "text", :name => 'q', :placeholder => t("main.search_placeholder")}
      %button{:type => "submit", :class => "btn btn-primary"}
        =t("search.search")
    %div.checkbox{:style => "padding-top: 7px;"}
      %label{:style => "padding-right: 7px;"}
        %input{:type => 'checkbox'}
          Buscar Proyectos de ley
      %label
        %input{:type => 'checkbox'}
          Buscar Tablas

%div.row
  %div.col-md-3
    %div
      %h3=t('main.login')
      %form
        %div.form-group
          %label{:for => 'username'}=t('main.username')
          %input.form-control{:id => 'username', :autocomplete => 'off'}
        %div.form-group
          %label{:for => 'password'}=t('main.password')
          %input.form-control{:id => 'password', :type => 'password'}
        %div.checkbox
          %label
            %input{:type => 'checkbox'}=t('main.stay-signed')
        %ul.list-inline{:style => 'font-size:12px'}
          %li
            %a{:href => "#register", :"data-toggle" => "modal", :"data-target" => "#register"}=t('main.registry')
          %li
            %a=t('main.forgot')
        %button.btn.btn-primary=t('main.login')
    / modal register
    %div.modal.fade{:id=>"register", :tabindex=>"-1", :role=>"dialog", :"aria-labelledby"=>"registerLabel", :"aria-hidden"=>"true"}
      %div.modal-dialog
        %div.modal-content
          %div.modal-header
            %button.close{:type => "button", :"data-dismiss" => "modal", :"aria-hidden" => "true"}
              \x
            %h4.modal-title{:id => "registerLabel"}
              ="New user"
          %div.modal-body
            %div.row
              %div.col-md-6
                %h5="Register with:"
                %ul
                  %li
                    %a
                      %i.fa.fa-twitter-square
                      ="Twitter"
                  %li
                    %a
                      %i.fa.fa-facebook-square
                      ="Facebook"
                  %li
                    %a
                      %i.fa.fa-google-plus-square
                      ="Google Plus"
              %div.col-md-6
                %form{:role => "form"}
                  %div.form-group
                    %label{:for => "email"}="Email Address"
                    %input.form-control{:id => "email", :placeholder => "Email"}
                  %div.form-group
                    %label{:for => "password_one"}="Password"
                    %input.form-control{:id => "password_one", :type => "password"}
                  %div.form-group
                    %label{:for => "password_two"}="Repeat password"
                    %input.form-control{:id => "password_two", :type => "password"}
                  %button.btn.btn-primary="Register"

    / end modal register
    %hr
    %div
      %table.table.table-stripped.table-condensed
        %thead
          %tr
            %th="Últimas Urgencias"
        %tbody
          %tr
            %td
              %strong Hoy
              Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sapiente culpa quo rem hic eum! ...
          %tr
            %td
              %strong Hoy
