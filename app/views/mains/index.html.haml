%section#board
  %h3.text-center.txt-board 
    = t('main.discussion_agendas')
  %p.text-center
    = link_to t('main.view_previous_agendas'), tables_path
  %div.row
    = render :partial => "latest_agendas"

%section#last-responses.hidden-xs
  %h3.title-last-responses 
    = t('main.last_questions')
  %div.row
    - if ! @messages.objects.blank?
      - @messages.objects.each do |message|
        %div.col-md-6.home-answers-wraper
          %div.home-answers
            %div.col-md-2  
              = image_tag('default-profile.png', class: "img-circle img-responsive")
            %div.col-md-10
              %p.light
                = message.subject
              %p
                = message.content
            %p.text-right
              = message.author_name
              %a{href: "/"} 
                = t('main.view_more_questions')
              - if !message.answers.blank?
                %p.light
                  Respuestas
                  - message.answers[0..1].each do |answer|
                    %div
                      %span
                        =answer.content
                      %span
                        =answer.person.name


          %i.fa.fa-quote-right.fa-2x
