- @bills.each do |bill|
  %div.row
    %div.col-md-1
      %h5.light
        = bill.uid
      - if ! bill.icon.blank?
        = image_tag("statusicon/" + bill.icon, class:"hidden-xs")
    %div.col-md-10
      %h5
        = link_to bill.title, t('routes.bills') + '/' + bill.uid, :onclick => "ga('send','paperwork','bill', '"+bill.uid+"')"
      %p
        - if ! bill.stage.blank?
          %span.light 
            Etapa: 
          = bill.stage
          %br/
        - if ! bill.creation_date.blank?
          %span.light 
            Fecha de Ingreso: 
          = localize bill.creation_date.to_date, :format => :long
          %br/
        - if ! bill.source.blank?
          %span.light 
            Iniciativa: 
          = bill.source

      %ul.list-inline
        %li.label-default
          etiqueta1
        %li.label-default
          etiqueta2

    %div.col-md-1
      %a{href: "/"}
        %h5
          0
          %i.fa.fa-star-o

%div.text-right
  - if ! params[:q].blank?
    = link_to t('search.all_results'), searches_bills_path + '/?q=' + params[:q] + '&bills=1', :class => "btn btn-default"