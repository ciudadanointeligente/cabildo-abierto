%div.hero-space-bill
  %div.container
    %div.row
      %div.col-md-9
        %ol.breadcrumb
          %li
            = link_to t('layout.home'), root_path
          %li
            = link_to t('bill.breadcrumb_bill'), searches_bills_path
          %li.active
            = @bill.title[0..30] + '...'
      %div.col-md-3
        %ul.list-inline.action-btn
          %li
            = link_to (new_user_subscription_path(:bill => params[:id])), class: 'btn btn-warning btn-xs' do
              %i.fa.fa-star-o
              = t('bill.bill_subscribe')
          %li
            - url = 'https://www.facebook.com/sharer/sharer.php?u='+request.original_url
            %a.btn.btn-warning.btn-xs{'href'=>'#', 'onclick'=>'window.open("'+url+'","facebook","width=450, height=250")'}
              %i.fa.fa-facebook 
              = t('bill.fb_share')
          %li
            - txt_twitter = sprintf(t('bill.tw_text'),@bill.uid)
            - url = 'https://twitter.com/share?url='+request.original_url+'&via=ciudadanoi&hashtags='+ENV['twitter_tags']+'&text='+txt_twitter
            %a.btn-warning.btn.btn-xs{'href'=>'#', 'onclick'=>'window.open("'+url+'","twitter","width=450, height=250")'}
              %i.fa.fa-twitter 
              = t('bill.tw_share')
    
    %div.row
      %div.col-md-1.side
        %h5.light
          = @bill.uid
        - if ! @bill.icon.blank?
          = image_tag("statusicon/" + @bill.icon, class:"hidden-xs", title:@bill.status.strip)
      %div.col-md-11
        %h4
          = @bill.title
        %p
          -if !@bill.creation_date.blank?
            %span.light
              = t('bill.creation_date') + ":"
            = localize @bill.creation_date.to_date
            %br/
          -if !@bill.source.blank?
            %span.light
              = t('bill.source') + ":"
            = @bill.source
            %br/
          -if !@bill.initial_chamber.blank?
            %span.light
              = t('bill.initial_chamber') + ":"
            = @bill.initial_chamber
            %br/
          -if !@bill.current_priority.blank?
            %span.light
              = t('bill.current_priority') + ":"
            = @bill.current_priority
            %br/
          -if !@bill.stage.blank?
            %span.light
              = t('bill.stage') + ":"
            = @bill.stage
            %br/
          -if !@bill.status.blank?
            %span.light
              = t('bill.status') + ":"
            = @bill.status
            %br/
          -if !@bill.publish_date.blank?
            %span.light
              = t('bill.publish_date') + ":"
            = localize @bill.publish_date.to_date
            %br/
          -if !@bill.abstract.blank?
            %span.light
              = t('bill.abstract') + ":"
            = @bill.abstract
            %br/
          -if !@bill.tags.blank?
            %span.light
              = t('bill.tags') + ":"
            = @bill.tags.join(',')
            %br/
          -if !@bill.authors.blank?
            %span.light
              = t('bill.authors') + ':'
            - authors = @bill.authors.map { |author| a = author.split(','); a[1].strip + ' ' + a[0].strip  }
            %span
              = authors.join(', ')
            %br/
          -if !@bill.tags.blank?
            %ul.list-inline
              - if !@bill.tags.blank?
                - @bill.tags.each do |tag|
                  %li
                    %span.label.label-default= tag
            %br/
          -if ! @bill.bill_draft_link.blank?
            %a{'href'=> @bill.bill_draft_link}
              = t('bill.download_project')
              %i.fa.fa-download
          -if ! @bill.law_web_link.blank?
            %a{'href'=> @bill.law_web_link, 'target'=>'_blank'}
              = t('bill.view_law')
              %i.fa.fa-eye