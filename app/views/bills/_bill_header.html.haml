%div.hero-space-bill
  %div.container
    %div.row
      %div.col-md-9
        %ol.breadcrumb
          %li
            = link_to t('layout.home'), root_path
          %li
            = link_to t('bill.breadcrumb_bill'), searches_bills_path
          %li.active
            = @bill.title[0..30] + '...'
      %div.col-md-3
        %ul.list-inline.action-btn
          %li
            = link_to (new_user_subscription_path(:bill => params[:id])), class: 'btn-warning' do
              %i.fa.fa-star-o
              = t('bill.bill_subscribe')
          %li
            - url = 'https://www.facebook.com/sharer/sharer.php?u='+request.original_url
            %a.btn-warning{'href'=>'#', 'onclick'=>'window.open("'+url+'","facebook","width=450, height=250")'}
              %i.fa.fa-facebook 
              = t('bill.fb_share')
          %li
            - txt_twitter = sprintf(t('bill.tw_text'),@bill.uid)
            - url = 'https://twitter.com/share?url='+request.original_url+'&via=ciudadanoi&hashtags='+ENV['twitter_tags']+'&text='+txt_twitter
            %a.btn-warning{'href'=>'#', 'onclick'=>'window.open("'+url+'","twitter","width=450, height=250")'}
              %i.fa.fa-twitter 
              = t('bill.tw_share')
    
    %div.row
      %div.col-md-1.side
        %p.light
          = @bill.uid
        - if ! @bill.icon.blank?
          = image_tag("statusicon/" + @bill.icon, class:"hidden-xs", title:@bill.status.strip)
      %div.col-md-11
        %h4
          = @bill.title
        -if !@bill.creation_date.blank?
          %p
            = localize @bill.creation_date.to_date
        -if !@bill.source.blank?
          %p
            %span.light
              = t('bill.source')
            = @bill.source
        -if !@bill.initial_chamber.blank?
          %p
            %span.light
              = t('bill.initial_chamber')
            = @bill.initial_chamber
        -if !@bill.current_priority.blank?
          %p
            %span.light
              = t('bill.current_priority')
            = @bill.current_priority
        -if !@bill.stage.blank?
          %p
            %span.light
              = t('bill.stage')
            = @bill.stage
        -if !@bill.sub_stage.blank? && !@bill.sub_stage =~ /\//
          %p
            %span.light
              = t('bill.sub_stage')
            = @bill.sub_stage
        -if !@bill.status.blank?
          %p
            %span.light
              = t('bill.status')
            = @bill.status
        -if !@bill.resulting_document.blank?
          %p
            %span.light
              = t('bill.resulting_document')
            = @bill.resulting_document
        /-if !@bill.law_id.blank?
        /  %p
        /    %span.light
        /      = t('bill.law_id')
        /    = @bill.law_id
        -if !@bill.merged_bills.blank?
          %p
            %span.light
              = t('bill.merged_bills')
            = @bill.merged_bills
        -if !@bill.subject_areas.blank?
          %p
            %span.light
              = t('bill.subject_areas')
            = @bill.subject_areas.join(", ")
        -if !@bill.publish_date.blank?
          %p
            %span.light
              = t('bill.publish_date')
            = localize @bill.publish_date.to_date
        -if !@bill.abstract.blank?
          %p
            %span.light
              = t('bill.abstract')
            = @bill.abstract
        -if !@bill.tags.blank?
          %p
            %span.light
              = t('bill.tags')
            = @bill.tags.join(',')
        
        - if !@bill.authors.blank?
          %p
            = t('bill.authors') + ':'
            - authors = @bill.authors.map { |author| a = author.split(','); a[1].strip + ' ' + a[0].strip  }
            %span
              = authors.join(', ')

        - if !@bill.tags.blank?
          %p
            %ul.list-inline
              - if !@bill.tags.blank?
                - @bill.tags.each do |tag|
                  %li
                    %span.label.label-default= tag
        
        - if ! @bill.bill_draft_link.blank?
          %p
            %a{'href'=> @bill.bill_draft_link}
              = t('bill.download_project')
              %i.fa.fa-download
        - if ! @bill.law_web_link.blank?
          %p
            %a{'href'=> @bill.law_web_link, 'target'=>'_blank'}
              = t('bill.view_law')
              %i.fa.fa-eye