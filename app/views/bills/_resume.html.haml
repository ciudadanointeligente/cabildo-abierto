%div.hero-space
  %div.container
    %div.row
      %div.col-md-6
        %ol.breadcrumb
          %li
            = link_to "Portada", root_path
          %li
            %a{'href'=>'#'}
              Proyectos de ley
          %li.active
            = @bill.title[0..30] + '...'
      
      %div.col-md-6
        %ul.list-inline.action-btn
          %li
            - url = 'https://www.facebook.com/sharer/sharer.php?u='+request.original_url
            %a.btn-default{'href'=>'#', 'onclick'=>'window.open("'+url+'","facebook","width=450, height=250")'}
              %i.fa.fa-facebook 
              Comparte
          %li
            - url = 'https://twitter.com/share?url='+request.original_url+'&hashtags=pmo&text='+@bill.title[0..50]
            %a.btn-default{'href'=>'#', 'onclick'=>'window.open("'+url+'","twitter","width=450, height=250")'}
              %i.fa.fa-twitter 
              Twittea
    
    %div.row
      %div.col-md-1.side
        %p.light
          = @bill.uid
        = image_tag("statusicon/" + @icon_bill, class:"hidden-xs", title:@bill.status.strip)
      %div.col-md-11
        %h4
          = @bill.title
        
        %p
          = @bill.abstract
        
        - if !@bill.authors.blank?
          %p
            Autores:
            - authors = @bill.authors.map { |author| a = author.split(','); a[1].strip + ' ' + a[0].strip  }
            %span
              = authors.join(', ')

        %p
          %ul.list-inline
            - if !@bill.tags.blank?
              - @bill.tags.each do |tag|
                %li
                  %span.label.label-default= tag
        - if ! @bill.bill_draft_link.blank?
          %p
            %a{'href'=> @bill.bill_draft_link}
              Ver proyecto 
              %i.fa.fa-chevron-circle-right