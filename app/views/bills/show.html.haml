          %tr
            %th= t 'bill.current_urgency'
            %td= @bill.current_urgency
          %tr
            %th= t 'bill.stage'
            %td= @bill.stage
          - if @bill.sub_stage.match(/[a-z\d]+/)
            %tr
              %th= t 'bill.sub_stage'
              %td= @bill.sub_stage
          %tr
            %th= t 'bill.state'
            %td= @bill.state
          - if !@bill.law.blank?
            %tr
              %th= t 'bill.law'
              %td= @bill.law
          - if !@bill.link_law.blank?
            %tr
              %th= t 'bill.link_law'
              %td= link_to @bill.link_law, @bill.link_law
          - if @bill.merged != '[]'
            %tr
              %th= t 'bill.merged'
              %td= @bill.merged
          %tr
            %th= t 'bill.matters'
            - @matters = @bill.matters
            %td= render partial: "matter", collection: @matters
          - if !@bill.authors.blank?
            %tr
              %th= t 'bill.authors'
              - @authors = @bill.authors
              %td= render partial: "author", collection: @authors
          - if !@bill.observations.blank?
            %tr
              %th= t 'bill.observations'
              %td= @bill.observations
          - if !@bill.tags.blank?
            %tr
              %th
                Palabras claves
              %td
                %ul.list-inline
                  - if !@bill.tags.blank?
                    - @bill.tags.each do |tag|
