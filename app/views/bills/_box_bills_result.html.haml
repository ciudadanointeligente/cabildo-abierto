- @bills.each do |bill|
  %div.row
    %div.col-md-1
      %h5.light
        = bill.uid
      - if ! bill.icon.blank?
        = image_tag("statusicon/" + bill.icon, class:"hidden-xs")
    %div.col-md-10
      %h5
        = link_to bill.title, bill_path(bill.uid), :onclick => "ga('send','paperwork','bill', '"+bill.uid+"')"
      %p
        - if ! bill.stage.blank?
          %span.light
            = t('search.stage')
          = bill.stage
          %br/
        - if ! bill.creation_date.blank?
          %span.light
            = t('search.creation_date')
          = localize bill.creation_date.to_date, :format => :long
          %br/
        - if ! bill.source.blank?
          %span.light
            = t('search.initiative')
          = bill.source

    %div.col-md-1
      %p
        = link_to (new_user_subscription_path(:bill => bill.uid)) do
          %i.fa.fa-star-o{title: t('bill.subscribe')}
          %span.visible-xs 
            = t('bill.subscribe')

%div.row
  %div.col-md-6.text-center
    - if ! @bills_query.previous.blank?
      = link_to searches_bills_path + '?q='+params[:q]+'&page=' + (params[:page].to_i - 1).to_s + '&bills=1', :class => 'btn btn-default' do
        %i.fa.fa-long-arrow-left
        = t('pagination.previous')

  %div.col-md-6.text-center
    - if ! @bills_query.next.blank?
      = link_to searches_bills_path + '?q='+params[:q]+'&page=' + (params[:page].to_i + 1).to_s + '&bills=1', :class => 'btn btn-default' do
        = t('pagination.next')
        %i.fa.fa-long-arrow-right

- if @bills.count == 0
  %p.text-center
    = t('search.there_are_no_results')