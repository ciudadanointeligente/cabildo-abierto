- @bills.each do |bill|
  %div
    %div.row
      %div.col-md-9
        %p
          = bill.uid
      %div.col-md-3
        %span.fav
          %a{'href'=>'#'}
            99999
            %i.fa.fa-star
        %span.alert
          %a{'href'=>'#'}
            99999
            %i.fa.fa-bell
    %div.row
      %div.col-md-1.hidden-xs
        - if ! bill.icon.blank?
          %div.iconoclast
            = image_tag("statusicon/" + bill.icon)
      %div.col-md-11
        %h3
          = link_to bill.title, bill_path(bill.uid), :onclick => "ga('send','paperwork','bill', '"+bill.uid+"')"
        %p 
          = bill.abstract

- if @bills.count == 0
  %p.text-center
    = t('search.there_are_no_results')