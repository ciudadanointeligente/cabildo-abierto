- @parliamentarians.persons.each do |parliamentarian|
  %div.row
    %div.col-md-1
      - if !parliamentarian.images[0].nil?
        %img.img-circle.img-responsive{:src=>parliamentarian.images[0]['url']}
      - else
        %img.img-circle.img-responsive{'src'=>'http://www.placehold.it/200x200'}
    %div.col-md-11
      %div.row
        %div.col-md-9
          %h4
            = link_to parliamentarian.name, parliamentarian_path(parliamentarian.id)
        %div.col-md-3
          %a{'href'=>'#'}
            %i.fa.fa-pencil
            99999
      %p
        %strong
          Partido:
        el Partido
        - if ! parliamentarian.represent[0].region.blank?
          %strong
            Lugar que representa:
          = parliamentarian.represent[0].region

- if @parliamentarians.persons.count == 0
  %p.text-center
    = t('search.there_are_no_results')