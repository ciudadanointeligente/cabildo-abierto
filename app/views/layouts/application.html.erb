<!--[if gt IE 8]><!--> <html class="no-js" ng-app="pmoApp" lang="es"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title><%= Legislative::Application.config.application_name %></title>
    <meta name="description" content="">

    <!-- Mobile viewport optimized: h5bp.com/viewport -->
    <meta name="viewport" content="width=device-width">

    <%= stylesheet_link_tag 'bootstrap.min.css' %>
    <%= stylesheet_link_tag 'jquery.tagit.css' %>
    <%= stylesheet_link_tag 'style' %>
    <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/flick/jquery-ui.css" rel="stylesheet">
    <link href="http://zhaber.github.io/datetimepicker/datetimepicker.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <link href="//cdnjs.cloudflare.com/ajax/libs/chosen/1.0/chosen.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag 'mainmain' %>

    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    </style>
    <!--
    <%= javascript_include_tag 'modernizr.2.7.0.min.js' %>
    -->
    <script src="http://code.jquery.com/jquery-1.7.2.min.js"></script>
    
    <%= csrf_meta_tag %>
</head>
<body>
  <div class="wrap">
    <!--[if lt IE 7]><p class="chromeframe">Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div id='site-logo'>
            <a href="<%=root_path%>"><%= image_tag "logo-congresoabierto.png", alt:'Congreso Abierto' %></a>
          </div>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to t('layout.search'), searches_path %><li/>
            <!-- <li><%= link_to t('layout.tables'), tables_path %><li/> -->
            <li><%= link_to t('layout.communication'), communications_path %><li/>
            <!-- <li><%= link_to t('layout.disclosure'), disclosures_path %><li/> -->
            <li><%= link_to t('layout.congressmen'), congressmen_path %><li/>
            <li><%= link_to t('layout.glossary'), glossaries_path %><li/>
            <!-- <li><%= link_to t('layout.about_us'), 'http://www.ciudadanointeligente.org/quienes-somos/' %><li/> -->
          </ul>
          <% if current_user %>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user" title="<%= t('users.logged_as')%> <%= current_user.email %>"></i> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li class="dropdown-header">Bienvenido(a) <%= current_user.username %></li>
                <li role="presentation" class="divider"></li>
                <li><%= link_to t('users.log_out'), log_out_path %></li>
              </ul>
            </li>
          </ul>
          <% end %>
        </div><!--/.nav-collapse -->
      </div>
    </div>
    
    <!-- LLamada buscardor -->
    <% if @condition_search %>
    <%= render :partial => "search"%>
    <% end %>

    <% if @condition_priority_box %>
    <!-- LLamada hot -->
    <%= render :partial => "hot"%>
    <% end %>

    <% if @condition_resume_bill %>
    <!-- LLamada resumen proyectos de ley -->
    <%= render :partial => "resume"%>
    <% end %>

    <div class="container">

      <div class="row">
        <div class="col-md-12">
          <% flash.each do |name, msg| %>
            <div class="alert alert-info">
            <button type="button" class="close" aria-hidden="true" data-dismiss="alert">&times;</button>
              <%= content_tag :div, msg, :id => "flash_#{name}" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- the content -->
      <%= yield %>
      <!-- end of content -->

    </div> <!-- /container -->
  </div> <!-- /wrap -->

  <div id="footer">
    <div class="container">
      <p class="text-muted credit">
        (cc) 2014. <%= Legislative::Application.config.created_by_name %></p>
    </div>
  </div>

  <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
  <script>window.jQuery || document.write('<script src="http://code.jquery.com/jquery-1.7.2.min.js" type="text/javascript"><\/script>')</script>
  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.1.4/angular.min.js"></script>
  <script src="http://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.6.0.js"></script>
  <script src="http://zhaber.github.io/datetimepicker/datetimepicker.js"></script>

  <!-- scripts concatenated and minified via build script -->
  <%= javascript_include_tag 'jquery_ujs.js' %>
  <%= javascript_include_tag 'bootstrap.min.js' %>
  <%= javascript_include_tag 'application.js' %>
  <!-- end scripts -->

  <!-- Google Analytics -->
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', '<%= ENV['analytics'] %>');  // Replace with your property ID.
    ga('send', 'pageview');
  </script>
  <!-- End Google Analytics -->
</body>
</html>
